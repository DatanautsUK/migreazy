#!/usr/bin/env ruby

if ARGV.size < 1
  puts "migreazy [diff|down|find]"
  exit
end

require 'config/boot'
require 'config/environment'

action = ARGV.first
action_class = begin
  Migreazy::Action.const_get(action.capitalize)
rescue NameError
end
if action_class
  action_class.new(ARGV[1..-1]).run
else
  puts "'#{action}' is not a migreazy action."
end